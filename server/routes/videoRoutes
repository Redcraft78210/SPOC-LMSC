import express from 'express';
import authMiddleware from '../middlewares/authMiddleware.js';
import videoController from '../controllers/videoController.js';


const router = express.Router();

// Get all videos
router.get('/', authMiddleware, videoController.getVideo);

// Edit an existing video
router.put('/:id', authMiddleware, videoController.editVideo);

// Delete an existing video
router.delete('/:id', authMiddleware, videoController.deleteVideo);

// Get video by student id and student class
router.get('/class/:classId', authMiddleware, videoController.getVideoByClass);

export default router;

